dsconfig create-virtual-attribute \
	--name "Add Introspect to DCR Clients" \
	--type user-defined \
	--set enabled:true \
	--set attribute-type:pf-oauth-client-grant-type \
	--set base-dn:ou=clients,o=appintegrations \
	--set 'filter:pf-oauth-client-id=dcr-*' \
	--set conflict-behavior:merge-real-and-virtual \
	--set value:implicit \
	--set value:urn:pingidentity.com:oauth2:grant_type:validate_bearer
